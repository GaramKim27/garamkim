package ch02;

public class _12_WhileEx {
	public static void main(String[] args) {
		
		//1.초기값
		int dan = 2;
		int i = 1;
		int a = 1; // =?
		System.out.println("*** 2단 ***");
		//2.조건식
		while(i < 10) {//i가 증가하므로..
		//3.증감식
			a = dan*i; // 2*1,2*2...
			System.out.println(dan + "*" + i  + "=" + a);
			i++; 
		}
		System.out.println();
		
		//1.초기값
				int ban = 3;
				int q = 1;
				int w = 1; // =?
				System.out.println("*** 2단 ***");
				//2.조건식
				while(q < 10) {//i가 증가하므로..
				//3.증감식
					w = ban*q; // 2*1,2*2...
					System.out.println(ban + "*" + q  + "=" + w);
					q++;
				}
	}
				
}
