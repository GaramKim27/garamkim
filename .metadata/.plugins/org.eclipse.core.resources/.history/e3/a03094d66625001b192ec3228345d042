package ch02;

public class _20_ForEx {
	public static void main(String[] args) {
		/*
		 * //2단-9단 구구단 출력
		 * 
		 * ------------
		 * -----2단-----
		 * ------------
		 * 2 * 1 = 2
		 * 
		 * ------------
		 * -----3단-----
		 * ------------
		 * 3 * 1 = 3
		 */
		//System.out.println( +"단");
		
		int dan;
		int times;
		System.out.println("===========================");
		for(dan = 2; dan <= 9;dan++){
			System.out.println("========= " + dan + "단  =========");
			for(times = 1; times <= 9; times++) {
				System.out.println(dan + "X" + times + " = " +(dan * times));
			}
			System.out.println("===========================");
		}
	}
}
