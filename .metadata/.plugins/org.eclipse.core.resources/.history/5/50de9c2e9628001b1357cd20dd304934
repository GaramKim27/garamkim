package ch04;

public class _02_Sungjuk {
	
	private int korNum;
	private int engNum;
	private int mathNum;
	
	public void setKorNum(int korNum) {
		this.korNum = korNum;
	}
	public void setEngNum(int engNum) {
		this.engNum = engNum;
	}
	public void setMathNum(int mathNum) {
		this.mathNum = mathNum;
	}
	
	public int getTotal(int korNum, int engNum,  int mathNum) {
		int result = korNum + engNum + mathNum;
		return result;
	}
	
	public double getAvg(int korNum, int engNum,  int mathNum) {
	double result = (korNum + engNum + mathNum)/3.0;
		return result;
	}
	
	
	
	
	
	

	
		
	
}
