package test;

public class _08_CalInfo {
		
	public int getTotal(int num1, int num2){
		int result = num1 + num2;
		return  result;
	}
	public int getAvg(int num1, int num2){
		int result = (num1 + num2)/2;
		return  result;
	}

	System.out.println("두수의 합은 : " + (num1 + num2));
	System.out.println("두수의 평균은 : " + (num1 + num2)/2);
	}
}