package ch03;


public class _01_studentInfo {
	public static void main(String[] args) {
		/*     
		 * 인스턴스 생성 : 클래스명 참조변수명 = new 클래스명(); // new 생성자;
		 *       접근 : 참조변수명.멤버변수
		 *            참조변수명.멤버메서드
		 * - 참조변수명애는 생성한 인스터스의 힘메모리공간 주서값이 들어있다.
		 *   앞의 클래스명은 데이터타입이고, 참조변수명으로 접근할때 사용한다.
		 *   뒤의 클래스명은 힙메모리의 인스턴스 생성시 사용되는 생성자이다.               
		 */ 
		
		// 인스턴스 생성
		_01_StudentMain info = new _01_StudentMain();
		
		// 변수의 값 할당
		info.studentID = 201216011;
		info.studentName = "김가람";
		info.age = 27;
		info.email = "garam6500@naver.com";
		
		_01_StudentMain info2 = new _01_StudentMain();
		info2.studentID = 2016;
		info2.studentName = "이수하";
		info2.age = 24;
		info2.email = "garam6500@naver.com";
		
		// 출력(메서드 호출)
		info.printInfo();
		System.out.println();
		info2.printInfo();
		
		
		
	}
	
}
